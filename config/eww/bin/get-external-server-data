#!/bin/bash

#Set up our information
login_data=$(cat ~/.external_server_login)
ssh_command="df -h"

#Run our command
server_output=$(ssh "$login_data" "$ssh_command" 2>&1)

filesystem="/dev/vda1"

#Format the output client-side
server_data=$(echo "$server_output" | grep -w $filesystem | awk '{
printf("{\"size\":\"%s\",\"used\":\"%s\",\"avail\":\"%s\",\"percent\":\"%s\"}",$2, $3, $4, $5)
}' | sed 's/G/GB/g')

echo "$server_data"
